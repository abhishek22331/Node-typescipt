{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@controllers": ["controllers/user.ts"],
      "@router": ["route/index.ts"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true     
  },
  "ts-node": {
    "esm": true,
    "compiler": "typescript",
    "moduleResolution": "node",
    "noEmit": true
  }
}
